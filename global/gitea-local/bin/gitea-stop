#!/usr/bin/env bash
# gitea-stop - Stop Gitea server

set -e

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m'

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
GITEA_DIR="$(dirname "$SCRIPT_DIR")"
PID_FILE="$GITEA_DIR/.gitea.pid"

# Check if running
if ! pgrep -f "gitea web" > /dev/null; then
    echo -e "${YELLOW}Gitea is not running${NC}"
    rm -f "$PID_FILE"
    exit 0
fi

GITEA_PID=$(pgrep -f "gitea web")

echo -e "${GREEN}Stopping Gitea (PID: $GITEA_PID)...${NC}"

# Try graceful shutdown first
pkill -f "gitea web"

# Wait for shutdown
for i in {1..10}; do
    if ! pgrep -f "gitea web" > /dev/null; then
        echo -e "${GREEN}✓ Gitea stopped successfully${NC}"
        rm -f "$PID_FILE"
        exit 0
    fi
    sleep 1
done

# If still running, force kill
if pgrep -f "gitea web" > /dev/null; then
    echo -e "${YELLOW}Forcing shutdown...${NC}"
    pkill -9 -f "gitea web"
    sleep 1
fi

if pgrep -f "gitea web" > /dev/null; then
    echo -e "${RED}✗ Failed to stop Gitea${NC}"
    exit 1
else
    echo -e "${GREEN}✓ Gitea stopped${NC}"
    rm -f "$PID_FILE"
fi
